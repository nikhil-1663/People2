@model List<People2.Models.PersonMod>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <style>

        body {
            color: white;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid white;
            color: white; /* Make text color of td white */
        }

        th {
            background-color: #333;
        }

        tr:nth-child(even) {
            background-color: #444;
        }

        a {
            text-decoration: none;
            color: white;
            padding: 5px 10px;
            margin: 5px;
            border-radius: 5px;
        }

            a.btn-primary {
                background-color: #007bff;
            }

            a.btn-warning {
                background-color: #ffc107;
            }

            a.btn-danger {
                background-color: #dc3545;
            }

            a:hover {
                opacity: 0.8;
            }


    </style>
</head>
<body>

<h2>Persons List</h2>

<a asp-action="Create" class="btn btn-primary">Create New Person</a>

    <!-- Search Bar -->
    <form method="get" asp-action="Search">
        <input type="text" name="idNum" placeholder="Enter ID Number" />
        <button type="submit">Search</button>
    </form>

<table class="table">
    <thead>
        <tr>
@*             <th>ID</th>
 *@            <th>First Name</th>
            <th>Last Name</th>
            <th>ID Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
@*                 <td>@person.Id</td>
 *@                <td>@person.FName</td>
                <td>@person.LName</td>
                <td>@person.IdNum</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@person.IdNum" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@person.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</body>
</html>
