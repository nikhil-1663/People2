@model People2.Models.PersonMod
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <style>

        label {
            display: block;
            text-align: left;
            font-size: 16px;
            font-weight: 500;
            color: white;
            margin-top: 20px;
        }

        input {
            display: block;
            width: 100%;
            padding: 12px;
            margin-top: 8px;
            background-color: rgba(255, 255, 255, 0.07);
            border-radius: 5px;
            border: none;
            font-size: 16px;
            color: white;
        }

        button {
            display: block;
            width: 100%;
            padding: 15px;
            margin-top: 20px;
            font-size: 18px;
            font-weight: bold;
            color: #080710;
            background-color: #ffffff;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
                color: white;
            }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input[type="submit"] {
            background-color: #0073b1;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            input[type="submit"]:hover {
                background-color: #005582;
            }

        h2{
            color: white;
        }

    </style>
</head>
<body>
<h2>Create New Person</h2>
    <div class="login-container">

<form asp-action="Create" method="post">
        <label asp-for="FName">Name</label>
        <input asp-for="FName" class="form-control" placeholder="Enter your first name" required />

        <label asp-for="LName">Surname</label>
        <input asp-for="LName" class="form-control" placeholder="Enter your surname" required />

        <label asp-for="IdNum">ID Number</label>
        <input asp-for="IdNum" class="form-control" placeholder="Enter your ID number" required />
        <span asp-validation-for="IdNum" class="text-danger"></span>

    <button type="submit" class="btn btn-success">Save</button>
@*     <a asp-action="Index" class="btn btn-secondary">Cancel</a>
 *@</form>
</div>
</body>
</html>