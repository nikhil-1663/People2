<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            text-align: center;
            background-color: #1d1d23;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Ensures body takes full height */
        }

        .login-container {
            max-width: 500px;
            margin: 80px auto;
            padding: 35px;
            background-color: rgba(255, 255, 255, 0.13);
            border-radius: 10px;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
            flex-grow: 1; /* Allows the login container to take available space */
        }

        h2 {
            font-size: 32px;
            font-weight: 500;
            color: #e58f00;
            
        }
        h3{
            color: #e58f00;
        }

        label {
            display: block;
            text-align: left;
            font-size: 16px;
            font-weight: 500;
            color: white;
            margin-top: 20px;
        }

        input {
            display: block;
            width: 100%;
            padding: 12px;
            margin-top: 8px;
            background-color: rgba(255, 255, 255, 0.07);
            border-radius: 5px;
            border: none;
            font-size: 16px;
            color: white;
        }

        button {
            display: block;
            width: 100%;
            padding: 15px;
            margin-top: 20px;
            font-size: 18px;
            font-weight: bold;
            color: #080710;
            background-color: #ffffff;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
                color: white;
            }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input[type="submit"] {
            background-color: #0073b1;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            input[type="submit"]:hover {
                background-color: #005582;
            }

        .map-container {
            text-align: center;
            margin-top: 20px;
        }

        iframe {
            width: 60%;
            height: 250px;
            border: 0;
            border-radius: 10px;
        }

        .social-media {
            text-align: center;
            margin-top: 20px;
        }

            .social-media a {
                text-decoration: none;
                color: #0073b1;
                font-size: 18px;
            }


        h3{
            color: white;
        }
    </style>
</head>
<body>
    <h2>Contact Us</h2>
    <div class="login-container">

        <form>
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" placeholder="Enter your name" required>

            <label for="lastName">Surame:</label>
            <input type="text" id="lastName" name="lastName" placeholder="Enter your surname" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>

            <label for="phone">Phone Number:</label>
            <input type="tel" id="phone" name="phone" placeholder="Enter your contact number" required>

            <label for="message">Message:</label>
            <textarea id="message" name="message" placeholder="Your message" required></textarea>

            <input type="submit" value="Submit" onclick="openEmailClient(event);">
        </form>
    </div>

    <div class="map-container">
        <h2>Find Us Here</h2>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d432.0405186596081!2d30.92129336964719!3d-29.982603740687782!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ef7ace700139aaf%3A0x3460aa3d8b40e9be!2s1%20Dahlia%20Pl%2C%20Isipingo%20Hills%2C%20Isipingo%2C%204133!5e1!3m2!1sen!2sza!4v1740228877093!5m2!1sen!2sza"
                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <div class="social-media">
        <h3>Connect with me on <a href="https://www.linkedin.com/in/nikhil-subhaschand-b078b2224/" target="_blank">LinkedIn</a></h3>
    </div>

    <script>
        function openEmailClient(event) {
            event.preventDefault();
            const firstName = document.getElementById("firstName").value;
            const lastName = document.getElementById("lastName").value;
            const email = document.getElementById("email").value;
            const phone = document.getElementById("phone").value;
            const message = document.getElementById("message").value;

            const subject = 'Query';
            const body = `First Name: ${firstName}\nLast Name: ${lastName}\nEmail: ${email}\nPhone: ${phone}\nMessage: ${message}`;

            const mailtoLink = `mailto:subhaschandn705@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            window.location.href = mailtoLink;
        }
    </script>
</body>
</html>
